server {
    listen       80;
    server_name  localhost;

    location /api/v2 {
        proxy_pass http://${NODE_APP}:8070;
    }

    location /api/v1/content {
        rewrite ^/api/v1/content/(.*) /api/v2/content/$1 redirect;
    }

    location /api/v1 {
        proxy_pass http://${GO_APP}:8080;
    }

    location / {
        proxy_pass http://${GO_APP}:8080;
    }
}
